generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Category {
  id          Int     @id @default(autoincrement())
  name        String 
  description String
  books       Book[]
}

model Book {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Float
  author      String
  stock       Int
  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id])
}